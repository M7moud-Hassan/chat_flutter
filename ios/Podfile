# Podfile for Flutter iOS application
platform :ios, '12.0' # Minimum iOS version - adjust as needed

# CocoaPods analytics sends usage trends to help improve the tool
install! 'cocoapods', 
         :deterministic_uuids => false,
         :generate_multiple_pod_projects => false,
         :incremental_installation => true

ENV['COCOAPODS_DISABLE_STATS'] = 'true'

# Flutter module Pods
def flutter_pods
  flutter_installer_ios_pods
  # If you have additional Flutter plugins, they will be automatically included
end

target 'Runner' do
  use_frameworks!
  use_modular_headers!

  # Flutter pods
  flutter_pods

  # Add your other pods here if needed
  # pod 'Firebase/Analytics'
  # pod 'Alamofire'

  # Pods for Runner
  target 'RunnerTests' do
    inherit! :search_paths
    # Pods for testing
  end

  target 'RunnerUITests' do
    # Pods for UI testing
  end
end

post_install do |installer|
  installer.pods_project.targets.each do |target|
    flutter_additional_ios_build_settings(target)
    
    # Additional build settings if needed
    target.build_configurations.each do |config|
      config.build_settings['IPHONEOS_DEPLOYMENT_TARGET'] = '12.0'
      config.build_settings['ENABLE_BITCODE'] = 'NO'
      config.build_settings['ONLY_ACTIVE_ARCH'] = 'YES'
      
      # Swift version if using Swift plugins
      config.build_settings['SWIFT_VERSION'] = '5.0' if target.respond_to?(:product_type) && target.product_type == "com.apple.product-type.bundle"
    end
  end
end