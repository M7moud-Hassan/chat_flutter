# Uncomment this line to define a global platform for your project
platform :ios, '12.0'

# CocoaPods analytics sends network stats. You can disable it if you want
ENV['COCOAPODS_DISABLE_STATS'] = 'true'

project 'Runner', {
  'Debug' => :debug,
  'Profile' => :release,
  'Release' => :release,
}

# Prevent Cocoapods from using frameworks for all pods (optional)
use_frameworks!
use_modular_headers!

# flutter_install_all_ios_pods is generated automatically
target 'Runner' do
  # Pods for Flutter plugins
  flutter_install_all_ios_pods File.dirname(File.realpath(__FILE__))
end

# Post-install processing for Flutter
post_install do |installer|
  installer.pods_project.targets.each do |target|
    flutter_additional_ios_build_settings(target)
    
    # Ensure deployment target matches
    target.build_configurations.each do |config|
      config.build_settings['IPHONEOS_DEPLOYMENT_TARGET'] = '14.0'
    end
  end
end
