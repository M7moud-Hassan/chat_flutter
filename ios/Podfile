# Minimal Podfile that works with Flutter
platform :ios, '13.0'

install! 'cocoapods', :deterministic_uuids => false
ENV['COCOAPODS_DISABLE_STATS'] = 'true'

target 'Runner' do
  use_frameworks!
  use_modular_headers!

  # Flutter Pod
  pod 'Flutter', :path => File.join('..', 'Flutter')
  
  # Plugin Pods
  pod 'camera', :path => File.join(File.dirname(__FILE__), '.symlinks', 'plugins', 'camera', 'ios')
  pod 'device_info_plus', :path => File.join(File.dirname(__FILE__), '.symlinks', 'plugins', 'device_info_plus', 'ios')
  pod 'file_picker', :path => File.join(File.dirname(__FILE__), '.symlinks', 'plugins', 'file_picker', 'ios')
  pod 'firebase_core', :path => File.join(File.dirname(__FILE__), '.symlinks', 'plugins', 'firebase_core', 'ios')
  pod 'firebase_messaging', :path => File.join(File.dirname(__FILE__), '.symlinks', 'plugins', 'firebase_messaging', 'ios')
  pod 'image_picker', :path => File.join(File.dirname(__FILE__), '.symlinks', 'plugins', 'image_picker', 'ios')
  pod 'path_provider', :path => File.join(File.dirname(__FILE__), '.symlinks', 'plugins', 'path_provider', 'ios')
  pod 'permission_handler', :path => File.join(File.dirname(__FILE__), '.symlinks', 'plugins', 'permission_handler', 'ios')
  pod 'shared_preferences', :path => File.join(File.dirname(__FILE__), '.symlinks', 'plugins', 'shared_preferences', 'ios')
  pod 'sqflite', :path => File.join(File.dirname(__FILE__), '.symlinks', 'plugins', 'sqflite', 'ios')
  pod 'url_launcher', :path => File.join(File.dirname(__FILE__), '.symlinks', 'plugins', 'url_launcher', 'ios')
  pod 'video_player', :path => File.join(File.dirname(__FILE__), '.symlinks', 'plugins', 'video_player', 'ios')
  
  # Add other plugins you're using
end

post_install do |installer|
  installer.pods_project.targets.each do |target|
    target.build_configurations.each do |config|
      config.build_settings['IPHONEOS_DEPLOYMENT_TARGET'] = '13.0'
      config.build_settings['ENABLE_BITCODE'] = 'NO'
      config.build_settings['ONLY_ACTIVE_ARCH'] = 'YES'
    end
  end
end